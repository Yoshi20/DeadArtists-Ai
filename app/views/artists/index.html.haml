- set_meta_tags description: meta_tag_description('Artists')
.artists
  .row
    .col.s12.center-align
      %span.artists-text-title= 'Artists'

  .row
    .col.s12.center-align
      .field.suffix.border
        %select#select-artist{autocomplete: "off", placeholder: "Search for an artist...", data: { controller: 'tom-select', resource: 'artists'  }}
          %option{value: ""} Search for an artist...
          - @artists.each do |artist|
            %option{value: artist.id.to_s}= artist.name
        %i arrow_drop_down

  .row
    .col.s12.center-align
      - if @artists.any?
        - @artists.each do |artist|
          = render artist
      - else
        %p No artists found...

  - if current_user.present? && current_user.admin?
    .row
      .col.s12.center-align
        = link_to new_artist_path do
          %i add_circle_outline
