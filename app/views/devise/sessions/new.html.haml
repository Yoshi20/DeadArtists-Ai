%h2.center-align{style: 'margin-top: 15px; margin-bottom: 15px;'}
  = t('login')

.row.login
  .col.s12
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { "data-turbo": "false" }) do |f|
      = render "devise/shared/error_messages", resource: resource

      .field.label.border
        = f.email_field :email, autocomplete: "email", autofocus: 'true'
        = f.label :email

      .field.label.border
        = f.password_field :password, autocomplete: "new-password"
        = f.label :password

      .field
        .row
          .col.s12.center-align
            %button.small-elevate.s12{type: 'submit'}
              %i input
              %span= t('log_in')

        .row
          .col.s6.center-align
            = link_to t('sign_up'), new_user_registration_path
          .col.s6.center-align
            = link_to t('devise.sessions.forgot_pw'), new_password_path(resource_name)
