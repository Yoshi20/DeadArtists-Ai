.artists
  .row
    .col.s12.center-align
      %span.artists-text-title= 'Artists'

  .row
    .col.s12.center-align
      .field.suffix.border
        %select#select-artist{autocomplete: "off", placeholder: "Select an artist...", data: { controller: 'tom-select' }}
          %option{value: ""} Select an artist...
          - @artists.each do |artist|
            %option{value: artist.id.to_s}= artist.name
        %i arrow_drop_down

  .row
    .col.s12.center-align
      - if @artists.any?
        - @artists.each do |artist|
          = render artist
      - else
        %p No artists yet...

  - if current_user.present? && current_user.admin?
    .row
      .col.s12.center-align
        = link_to new_artist_path do
          %i add_circle_outline
