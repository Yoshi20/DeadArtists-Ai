= turbo_frame_tag nft do
  .user-nfts
    .row
      .col.s12.center-align
        %h1.page-title= nft.name.gsub('vs.', '&')
    .row.mt-0.s
      .col.s6.center-align
        = link_to nft.artist, 'data-turbo-frame': '_top' do
          %img.responsive{src: nft.artist.image_link, style: 'max-height: 200px !important;'}
          .image-footer= 'Artist'
      .col.s6.center-align
        = link_to nft.painting, 'data-turbo-frame': '_top' do
          %img.responsive{src: nft.painting.image_link, style: 'max-height: 200px !important;'}
          .image-footer= 'Painting'
    .row{style: 'display: flex;'}
      .col.m.m4.l.center-align.middle-align
        = link_to nft.artist, 'data-turbo-frame': '_top' do
          %img.responsive{src: nft.artist.image_link, style: 'max-height: 200px !important;'}
          .image-footer= 'Artist'
      .col.s12.m3.center-align.middle-align
        = link_to nft, 'data-turbo-frame': '_top' do
          %img{src: nft.image_link, style: 'max-height: 200px !important;'}
          .image-footer= 'NFT'
      .col.m.m4.l.center-align.middle-align
        = link_to nft.painting, 'data-turbo-frame': '_top' do
          %img.responsive{src: nft.painting.image_link, style: 'max-height: 200px !important;'}
          .image-footer= 'Painting'
    .row.mt-0
      .col.s12
        .padding
          %p= nft.description
    .row.mt-0
      .col.s12.center-align.middle-align
        %h2.subtitle Traits
    = render partial: '/nfts/traits', locals: {nft: nft}
